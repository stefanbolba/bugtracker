.main__menu
    .hamburger__menu--container
        button(class='hamburger hamburger--arrow' type='button')
            span.hamburger-box
                span.hamburger-inner
    ul.menu        
        li(class="user__menu")
            a(class=`link user__name ${title.includes('Account') ? 'active' : ''}` data-menu='user') 
                .user__sprite
                span(class='menu__span user__name') Hello #{user.name}     

            .user__information
                .user__info--container
                    .user__photo
                        img.user__photo--details(src=`/img/users/${user.photo}`)
                    .user__details
                        .details__group
                            p Name:
                            p #{user.name}
                        .details__group
                            p Email:
                            p #{user.email}
                        .details__group
                            p Role:
                            p #{user.role}
                        .details__group
                            p Joined On:
                            p= splitDate(user.createdAt)
                .user__info--options
                    a.user__info--expand(href='/me') Change
                    a.logout(href='#') Log Out        
        li
            a(href="/" class=`link ${title === 'Home Page' ? 'active' : ''}` data-menu='home')
                .home__sprite
                span.menu__span Home                    
        li
            a(href="/addissue" class=`link ${title === 'Add Issue Page' ? 'active' : ''}` data-menu='addIssue')
                .addIssue__sprite
                span.menu__span Add Issue
        li
            a(href="/issues" class=`link ${title === 'Find Issues Page' ? 'active' : ''}` data-menu='issues')
                .issues__sprite
                span.menu__span Issues
